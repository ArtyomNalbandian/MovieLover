<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/movie_card_layout">

        <ImageView
            android:id="@+id/card_view_poster"
            android:layout_width="104dp"
            android:layout_height="156dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_view_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Item"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_poster"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_view_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Country"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/card_view_country_"
            app:layout_constraintTop_toBottomOf="@+id/card_view_name" />

        <TextView
            android:id="@+id/card_view_country_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:text="Страна: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/card_view_poster"
            app:layout_constraintTop_toBottomOf="@+id/card_view_name" />

        <TextView
            android:id="@+id/card_view_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/card_view_country"
            app:layout_constraintStart_toEndOf="@id/card_view_year_" />

        <TextView
            android:id="@+id/card_view_year_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Год: "
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/card_view_poster"
            app:layout_constraintTop_toBottomOf="@+id/card_view_country_" />

        <ImageView
            android:id="@+id/deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="16dp"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>